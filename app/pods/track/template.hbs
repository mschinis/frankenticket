<form class="form-horizontal" id="order-form">
  <div class="form-group">
    <label for="firstNameInput" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-5">
      {{input type="text" id="firstNameInput" class="form-control" placeholder="First name" value=model.event.firstName}}
    </div>
    <div class="col-sm-5">
      {{input type="text" id="lastNameInput" class="form-control" placeholder="Surname" value=model.event.lastName}}
    </div>
  </div>
  <div class="form-group">
    <label for="emailInput" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input type="text" id="emailInput" class="form-control" placeholder="lalala@tickets.ninja" value=model.event.email}}
    </div>
  </div>
  <div class="form-group">
    <label for="mobileInput" class="col-sm-2 control-label">Mobile</label>
    <div class="col-sm-10">
      {{input type="text" id="mobileInput" class="form-control" placeholder="077xxxxx" value=model.event.mobile}}
    </div>
  </div>
  <div class="form-group">
    <label for="eventInput" class="col-sm-2 control-label">Event Link</label>
    <div class="col-sm-10">
      {{input type="text" id="eventInput" class="form-control" placeholder="https://....." value=model.event.url}}
    </div>
  </div>
  {{#liquid-if model.tickets}}
  <div id="order">
    <div class="text-center"><h4>Optional - Preorder tickets</h4></div>
    <div class="form-group">
      <label for="ticketInput" class="col-sm-2 control-label">Ticket</label>
      <div class="col-sm-10">
        <div class="col-sm-8">
          {{ticket-select tickets=model.tickets action='selectTicket'}}
        </div>
        <div class="col-sm-4"></div>
          Quantity
      </div>
    </div>
    {{braintree-form clientToken=model.braintreeClientToken ticket=model.event.ticket action='sendTrackRequest'}}
  </div>

  {{/liquid-if}}

  <div id="actionButtons">
    {{#link-to 'index' class="btn btn-lg btn-warning"}}Cancel{{/link-to}}
    {{#if model.tickets}}
      <button type="button" class="btn btn-lg btn-primary" {{action 'sendTrackRequest'}}>Remind only</button>
    {{else}}
      <button type="button" class="btn btn-lg btn-primary" {{action 'sendAvailabilityRequest'}}>{{#if model.loading}}Loading{{else}}Submit{{/if}}</button>
    {{/if}}
  </div>
</form>
<script src="https://js.braintreegateway.com/v2/braintree.js"></script>
{{outlet}}
